<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context="MainActivity">

    <ImageView
        android:id="@+id/tagline"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:scaleType="fitXY"
        android:src="@drawable/images" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/tagline"
        android:layout_alignParentBottom="false"
        android:shadowColor="#2F84AD"
        android:text="Eat good to Feel good, So we bring you the most nutritious food arournd the planet. 'THE CAFE DIET '"
        android:textColor="#E9F1E3"
        android:textSize="25sp"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="205dp"
        android:scaleType="fitXY"
        android:src="@drawable/images2" />

    <ImageView
        android:id="@+id/contact"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android android:layout_marginTop="20dp"
        android:layout_below="@id/logo"
        android:src="@drawable/call" />

    <TextView
        android:id="@+id/contactno"
        android:layout_width="297dp"
        android:layout_height="37dp"
        android:layout_below="@id/logo"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="277dp"
        android:layout_toRightOf="@id/contact"
        android:text="+91 52155512145 "
        android:textColor="#E9F1E3"
        android:textSize="25sp"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/email"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="207dp"
        android:src="@drawable/envelope" />


    <TextView
        android:id="@+id/contactinfo"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="209dp"
        android:text="THECafeDiet@gmail.com"
        android:textColor="#E9F1E3"
        android:textSize="25sp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/workingtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="159dp"
        android:text="MONDAY  to SATURDAY - 9AM to 7PM "
        android:textColor="#E9F1E3"
        android:textSize="21sp"
        android:textStyle="italic"
        android:layout_marginLeft="50dp"

    <ImageView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="39dp"
        android:src="@drawable/location" />

    <TextView

        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="70dp"
        android:text="   #256 DOWNTOWN AVENUE 4th CROSS  PERTH  "
        android:textColor="#E9F1E3"
        android:textSize="20sp"
        android:textStyle="italic" />










</RelativeLayout>


