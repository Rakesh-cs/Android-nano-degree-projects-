<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp">

        <!-- Question 1 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="question_1"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="question_text_1"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/miami_heat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="miami_heat"
                android:onClick="onRadioButtonClickedQuestion1"/>

            <RadioButton
                android:id="@+id/new_york_knicks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="new_york_knicks"
                android:layout_marginBottom="8dp"
                android:onClick="onRadioButtonClickedQuestion1"/>

            <RadioButton
                android:id="@+id/chicago_bulls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chicago_bulls"
                android:layout_marginBottom="8dp"
                android:onClick="onRadioButtonClickedQuestion1"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="question_text_2"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/lebron_james"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="lebron_james"
                android:onClick="onRadioButtonClickedQuestion2"/>

            <RadioButton
                android:id="@+id/kevin_durant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kevin_durant"
                android:layout_marginBottom="8dp"
                android:onClick="onRadioButtonClickedQuestion2"/>

            <RadioButton
                android:id="@+id/stephen_curry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:onClick="onRadioButtonClickedQuestion2"
                android:text="stephen_curry" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="question_3"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="question_text_3"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/zach_randolph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="zach_randolph"
                android:onClick="onRadioButtonClickedQuestion3"/>

            <RadioButton
                android:id="@+id/kobe_bryant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kobe_bryant"
                android:layout_marginBottom="8dp"
                android:onClick="onRadioButtonClickedQuestion3"/>

            <RadioButton
                android:id="@+id/dikembe_mutombo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dikembe_mutombo"
                android:layout_marginBottom="8dp"
                android:onClick="onRadioButtonClickedQuestion3"/>

        </RadioGroup>

        <!-- Question 4 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="question_4"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="question_text_4"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="gortat_and_bargnani"
            android:paddingBottom="8dp"/>

        <CheckBox
            android:id="@+id/marcin_gortat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="marcin_gortat"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/marco_belinelli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="marco_belinelli"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/andrea_bargnani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="andrea_bargnani"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/zaza_pachulia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zaza_pachulia"
            android:layout_marginBottom="8dp"/>


